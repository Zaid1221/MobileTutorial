<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaidjavaid.mobiletutorial.MainActivity">

    <TextView
        android:id="@+id/label_bill"
        android:text="@string/label_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:minWidth="100dp"
        android:minHeight="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp" />

    <TextView
        android:id="@+id/lable_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_tip"
        android:layout_below="@id/label_bill"
        android:layout_alignLeft="@id/label_bill"
        android:layout_alignRight="@id/label_bill"
        android:textSize="30sp"
        android:layout_marginTop="30sp" />

    <EditText
        android:id="@+id/edit_bill"
        android:hint="@string/edit_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_bill"
        android:layout_alignTop="@id/label_bill"
        android:layout_alignBottom="@id/label_bill"
        android:textSize="13sp"
        android:layout_marginLeft="120sp"
        android:minWidth="100sp"
        android:minHeight="100dp" />

    <EditText
        android:id="@+id/edit_tip"
        android:hint="@string/edit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lable_tip"
        android:layout_below="@id/edit_bill"
        android:layout_alignTop="@id/lable_tip"
        android:layout_alignBottom="@id/lable_tip"
        android:layout_alignLeft="@id/edit_bill"
        android:minWidth="100sp"
        android:minHeight="100dp"
        android:textSize="13sp" />
</RelativeLayout>